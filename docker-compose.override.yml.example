services:
  l9-api:
    environment:
      # Override to use host PostgreSQL (macOS uses host.docker.internal)
      DATABASE_URL: postgresql://${POSTGRES_USER:-postgres}:${POSTGRES_PASSWORD}@host.docker.internal:5432/${POSTGRES_DB:-l9_memory}
      MEMORY_DSN: postgresql://${POSTGRES_USER:-postgres}:${POSTGRES_PASSWORD}@host.docker.internal:5432/${POSTGRES_DB:-l9_memory}
