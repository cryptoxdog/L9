# =============================================================================
# L9 Environment Variables Template
# =============================================================================
# Copy to .env (Docker) or .env.local (local dev) and fill in values.
# NEVER commit .env or .env.local to git!
# =============================================================================

# -----------------------------------------------------------------------------
# Database (PostgreSQL with pgvector) — REQUIRED
# -----------------------------------------------------------------------------
# Docker: use 'postgres' service name | Local: use 127.0.0.1
MEMORY_DSN=postgresql://postgres:YOUR_DB_PASSWORD@postgres:5432/l9_memory
DATABASE_URL=postgresql://postgres:YOUR_DB_PASSWORD@postgres:5432/l9_memory

# Postgres container settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_DB_PASSWORD
POSTGRES_DB=l9_memory

# -----------------------------------------------------------------------------
# API Keys — REQUIRED
# -----------------------------------------------------------------------------
# Generate with: openssl rand -hex 32
L9_EXECUTOR_API_KEY=YOUR_EXECUTOR_KEY_HERE
L9_API_KEY=YOUR_API_KEY_HERE
OPENAI_API_KEY=sk-YOUR_OPENAI_KEY_HERE
PERPLEXITY_API_KEY=pplx-YOUR_PERPLEXITY_KEY_HERE

# -----------------------------------------------------------------------------
# Vector Store (Qdrant) — OPTIONAL
# -----------------------------------------------------------------------------
# Docker: use 'qdrant' | Local: use 127.0.0.1
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# -----------------------------------------------------------------------------
# Graph Database (Neo4j) — OPTIONAL
# -----------------------------------------------------------------------------
# Docker: use 'neo4j' | Local: use localhost
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=YOUR_NEO4J_PASSWORD

# -----------------------------------------------------------------------------
# Redis — OPTIONAL
# -----------------------------------------------------------------------------
# Docker: use 'redis' | Local: use 127.0.0.1
REDIS_HOST=redis
REDIS_PORT=6379

# -----------------------------------------------------------------------------
# Twilio (SMS/Voice) — OPTIONAL
# -----------------------------------------------------------------------------
TWILIO_ACCOUNT_SID=YOUR_TWILIO_SID
TWILIO_AUTH_TOKEN=YOUR_TWILIO_TOKEN
TWILIO_SMS_NUMBER=YOUR_TWILIO_NUMBER
TWILIO_WHATSAPP_NUMBER=YOUR_TWILIO_WA_NUMBER
TWILIO_ENABLED=true

# -----------------------------------------------------------------------------
# Slack Integration — OPTIONAL
# -----------------------------------------------------------------------------
SLACK_APP_ID=YOUR_SLACK_APP_ID
SLACK_SIGNING_SECRET=YOUR_SLACK_SIGNING_SECRET
SLACK_CLIENT_SECRET=YOUR_SLACK_CLIENT_SECRET
SLACK_CLIENT_ID=YOUR_SLACK_CLIENT_ID
SLACK_BOT_TOKEN=xoxb-YOUR_BOT_TOKEN
SLACK_VERIFICATION_TOKEN=YOUR_VERIFICATION_TOKEN
SLACK_APP_ENABLED=true

# -----------------------------------------------------------------------------
# Google (Calendar/Gmail) — OPTIONAL
# -----------------------------------------------------------------------------
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/google_credentials.json
# Calendar Adapter (v2.6+)
GOOGLE_CALENDAR_API_KEY=
GOOGLE_CALENDAR_WEBHOOK_SECRET=
CALENDAR_ADAPTER_ENABLED=true
# Email Adapter (v2.6+)
EMAIL_ADAPTER_SIGNING_SECRET=
GMAIL_API_KEY=

# -----------------------------------------------------------------------------
# API Configuration — REQUIRED
# -----------------------------------------------------------------------------
# Docker: use 0.0.0.0 | Local: use 127.0.0.1
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# Memory API
MEMORY_API_PORT=8080
MEMORY_API_BASE_URL=http://l9-memory-api:8080

# -----------------------------------------------------------------------------
# Embedding Configuration
# -----------------------------------------------------------------------------
EMBEDDING_PROVIDER=stub
EMBEDDING_MODEL=text-embedding-3-large

# -----------------------------------------------------------------------------
# Development Mode
# -----------------------------------------------------------------------------
# true = local dev (skips Docker-specific init) | false = Docker/VPS
LOCAL_DEV=false

# -----------------------------------------------------------------------------
# Deployment
# -----------------------------------------------------------------------------
DOMAIN=your-domain.com
VPS_IP=YOUR_VPS_IP

# -----------------------------------------------------------------------------
# Integration Toggles — OPTIONAL
# -----------------------------------------------------------------------------
MAC_AGENT_ENABLED=false
EMAIL_ENABLED=true
WABA_ENABLED=false
