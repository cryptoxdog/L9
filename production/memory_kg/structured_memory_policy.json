{
  "retention": "long_term",
  "write_rules": {
    "allowed": [
      "reasoning",
      "execution_logs",
      "governance_events",
      "agent_actions",
      "system_metrics"
    ],
    "forbidden": [
      "private_keys",
      "system_passwords",
      "api_keys",
      "credentials",
      "pii"
    ]
  },
  "constraints": {
    "max_tokens_per_entry": 2000,
    "no_sensitive_data": true,
    "require_metadata": true,
    "json_serializable": true
  },
  "routing_rules": {
    "simple_data": "supabase",
    "graph_data": "both",
    "relationships": "neo4j"
  }
}

